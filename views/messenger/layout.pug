extend ../layout

append styles
  link(rel="stylesheet", href="/styles/messenger/layout.css")

block header
  #header.p-2.d-flex.justify-content-between
    #header-left.d-flex.align-items-center
      #logo
        a(href="/messenger", title="OH chat - Messenger")
          img(src="/images/logo_rounded.png", alt="oh-chat", width="40px")
      #search.ml-1
        input.form-control(type="text", placeholder="Tìm kiếm bạn bè")
    #header-right.d-flex.align-items-center
      #user
        a(href="/messenger/profile")
          img.rounded-circle.mr-1(src=memberAvatar, alt=`${memberName}`, width="30px")
          span= memberName
      #notification.mx-2
        button#member-notify-btn.btn.btn-light(type="button", data-toggle="collapse", data-target="#notify-drop", aria-controls="notify-drop")
          i.fas.fa-bell
      #info
        button#member-info-btn.btn.btn-light(type="button", data-toggle="collapse", data-target="#info-drop", aria-controls="info-drop")
          i.fas.fa-caret-down
      #notify-drop.collapse(data-parent="#header-right", style="z-index: 1000")

      #info-drop.collapse(data-parent="#header-right", style="z-index: 1000")
        .p-3
          a.p-2.d-flex(href="/messenger/profile")
            div
              img.rounded-circle(src=memberAvatar, alt="oh-chat", width="55px")
            .ml-3
              span= memberName
              br
              small Xem thông tin của bạn
          hr
          .w-100
            a.p-2(href="#")
              i.fas.fa-cog
              span.ml-2 Cài đặt
          .w-100
            a.p-2(href="/login/logout")
              i.fas.fa-sign-out-alt
              span.ml-2 Đăng xuất

    

block main
  #main
    block contentMain

append scripts
  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js", crossorigin="anonymous")
  script(src="/scripts/lazysizes.js")